<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="joint_budget.joint_budget">
    <!-- To auto-complete the email text field in the login form with the userInfo's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Login.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Events.JoinExistingEvent.JoinExistingEventActivity" />
        <activity android:name=".Events.CreateEvent.CreateEventActivity" />
        <activity android:name=".Events.Choice.ChoiceActivity" />
        <activity android:name=".Event.EventActivity" />
        <activity android:name=".Events.Events.EventsActivity" />
        <activity android:name=".Register.RegisterActivity" />
        <activity android:name=".Event.CreatePurchases.CreatePurchasesActivity" />
        <activity android:name=".Event.Debts.DebtsActivity" />
        <activity android:name=".Event.Purchases.PurchasesActivity" />
        <activity android:name=".Event.ShopList.ShopListActivity" />
        <activity android:name=".Events.AddParticipant.AddParticipantActivity" />
    </application>

</manifest>